<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HGS </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div id="main-container">
        <nav class="navbar navbar-expand-lg navbar-light sticky-top navbar-inverse" style="background-color: #f8f9fa; box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);">
            <div class="container">

                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")" style=" color: #007bff; font-size: 1.5rem;">
                    <img src="https://mma.prnewswire.com/media/1706541/HGS.jpg?p=twitter" alt="HGS" style="height: 40px; width: auto;" />
                </a>





                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("About", "Home")">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Contact", "Home")">Contact</a>
                        </li>
                    </ul>

                    @if (Session["IsAuthenticated"] != null && (bool)Session["IsAuthenticated"])
                    {

                        <div class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("LandingPage", "Account")">Dashboard</a>
                        </div>

                        <div class="text-center py-4">
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-primary" onclick="ConfirmLogout()" style="margin-right:10px; margin-left:10px;">Logout</a>
                        </div>
                    }
                    else
                    {

                        <div class="text-center py-4">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary" style="margin-right:10px">Login</a>
                        </div>
                    }



                </div>
            </div>


        </nav>

        <div class="body-content pt-2 ">
            @RenderBody()
            <hr />
            <footer class="bg-dark text-white py-4 align-bottom">
                <div class=" text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year HGS. All Rights Reserved.</p>
                    <div class="social-icons mt-3">
                        <a href="https://www.facebook.com/HGSInd/" class="text-white me-3" title="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://x.com/LifeAtHGS?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor" class="text-white me-3" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="https://www.linkedin.com/company/hinduja-global-solutions-inc--/posts/?feedView=all" class="text-white me-3" title="LinkedIn"><i class="bi bi-linkedin"></i></a>

                    </div>
                </div>
            </footer>
        </div>
        <style>
            .navbar-brand {
                transition: transform 0.3s ease, color 0.3s ease;
            }

                .navbar-brand:hover {
                    transform: scale(1.1);
                    color: #0056b3;
                }

            .nav-link:hover {
                color: #28a745;
            }

            footer {
                background-color: #111;
                color: #fff;
                text-align: center;
                padding: 10px 0;
            }


                footer .container-fluid {
                    padding-left: 0;
                    padding-right: 0;
                }

            .social-icons a {
                font-size: 1.5rem;
                transition: transform 0.3s ease, color 0.3s ease;
            }

                .social-icons a:hover {
                    transform: scale(1.2);
                    color: #f39c12;
                }

            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #main-container {
                display: flex;
                flex-direction: column;
                min-height: 100vh; /* Full height of the viewport */
            }

            .body-content {
                flex: 1;
            }
        </style>
        <script>
        function ConfirmLogout() {
            const confirmation = window.confirm("Are you sure you want to logout?");
            if (confirmation) {

            window.location.href = '@Url.Action("Logout", "Account")';
        }
        }
        </script>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
