@{
    ViewBag.Title = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        
        
    </style>
</head>
<body>

    <main>

        <section class="hero-section text-center text-white" style="background-color: #007bff; padding: 60px 20px;">
            <div class="container">
                <img src="https://mma.prnewswire.com/media/1706541/HGS.jpg?p=twitter" alt="HGS Logo" style="max-height: 100px; margin-bottom: 20px;">
                <h1 class="display-4">Welcome to HGS Internship Project</h1>
                <p class="lead">Building a secure and user-friendly platform to manage user data efficiently.</p>

            </div>
        </section>


        <div id="project-details" class="container py-5">
            <h2 class="text-center mb-4">Project Overview</h2>
            <p class="text-center">
                This project involves creating a secure login and user registration system with features like form validation, data management, and user-friendly navigation.
            </p>
            <div class="row mt-4">
                <div class="col-md-6 mb-4">
                    <h4>Key Features:</h4>
                    <ul>
                        <li>Login Page with User ID and Password</li>
                        <li>Registration Page with Form Validation</li>
                        <li>Landing Page with User Data Grid</li>
                        <li>Secure Password Handling and Input Validation</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4>Technologies Used:</h4>
                    <ul>
                        <li>Backend: ASP.NET MVC, C#</li>
                        <li>Frontend: Razor, Bootstrap</li>
                        <li>Database: SQL Server with Dapper</li>
                        <li>Dynamic Updates: JavaScript, AJAX</li>
                    </ul>
                </div>
            </div>
        </div>



        @if (Session["IsAuthenticated"] == null || !(bool)Session["IsAuthenticated"])
        {
            <div class="text-center py-4">
                <h3>Please Login to Continue</h3>
                <a href="@Url.Action("Index", "Login")" class="btn btn-primary">Login</a>
            </div>
        }
    </main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
